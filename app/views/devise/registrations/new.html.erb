 <div class="sign-body">
</div>
		<div class="grad">

    </div>
	<div class="sign-header">
			<div>
      <span>Sign In</span>
      </div>
		</div>
		<br>
 <div class="signin">
<%= form_with model:@user, url:user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="form-group">
  <div class="text-form-top">
    <label class="form-text">ログイン名</label>
    <span class="mandatory">必須</span>
  </div>
 <%= f.text_area :nickname, class: "sign-form", id:"nickname", placeholder: "例) cafe太郎", maxlength:"40", autofocus: true %>
</div>

<div class="form-group">
  <div class="text-form-top">
   <label class="form-text">メールアドレス</label>
   <span class="mandatory">必須</span>
   </div>
 <%= f.email_field :email, class: "sign-form", id:"email", placeholder: "メールアドレスの入力" %>
</div>

<div class="form-group">
  <div class="text-form-top">
   <label class="form-text">パスワード</label>
   <span class="mandatory">必須</span>
 </div>
 <%= f.password_field :password, class: "sign-form", id:"password", placeholder: "６文字以上の半角英数字" %>
</div>

<div class="form-group">
  <div class="text-form-top">
   <label class="form-text">パスワード(確認用)</label>
   <span class="mandatory">必須</span>
  </div>
 <%= f.password_field :password_confirmation, class: "sign-form", id:"password", placeholder: "６文字以上の半角英数字" %>
</div>

<div class="form-group">
  <div class="text-form-top">
   <label class="form-text">本名(全角)</label>
   <span class="mandatory">必須</span>
 </div>
   <div class="input-name">
     <%= f.text_area :first_name, class: "sign-name", id:"first_name", placeholder: "山田" %>
     <%= f.text_area :last_name, class: "sign-name", id: "last_name", placeholder: "大郎" %>
  </div>
</div>

<div class="form-group">
  <div class="text-form-top">
   <label class="form-text">本名(カナ)</label>
   <span class="mandatory">必須</span>
  </div>
    <div class="input-name">
     <%= f.text_area :first_kana, class: "sign-name", id:"first_kana", placeholder: "ヤマダ" %>
     <%= f.text_area :last_kana, class: "sign-name", id: "last_name", placeholder: "タロウ" %>
    </div>
</div>

 <div class="form-group">
    <div class='text-form-top'>
      <label class="form-text">生年月日</label>
      <span class="mandatory">必須</span>
    </div>
    <div class='input-birth'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
     </div>
   </div>
 
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>

</div>

<% end %>

<%= render "devise/shared/links" %>
